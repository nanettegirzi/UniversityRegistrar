@{
  Layout="_Layout";
}
<br>
<div class="container-fluid">
@if (Model.Count != 0)
{
  <ul class="list-group">
    @foreach (var student in Model)
    {
      <li class="list-group-item"><a href="/students/@student.GetId()">@student.GetName()</a>  -      <a href="/students/@student.GetId()/update">Edit</a> | <a href="/students/@student.GetId()/delete">Delete</a></li>
    }
  </ul>
}
<br>
<hr>
<br>
<h4><a href="/students/new">Add a new student</a></h4>
</div>
</div>
